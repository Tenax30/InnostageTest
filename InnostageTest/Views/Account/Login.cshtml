@model InnostageTest.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход в аккаунт";
}

<h2>Вход в аккаунт</h2>
<form method="post" asp-antiforgery="true" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label" asp-for="Username"></label>
        <div class="col-sm-4">
            <input class="form-control" asp-for="Username" />
        </div>
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label" asp-for="Password"></label>
        <div class="col-sm-4">
            <input class="form-control" asp-for="Password" />
        </div>
        <span asp-validation-for="Password"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Войти" />

    @section scripts{
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</form>

