@model InnostageTest.Models.Request
@{
    ViewData["Title"] = $"Заявка #{Model.RequestId}";

    var outputRequestTime = Model.RequestTime.ToString("yyyy-MM-dd HH:mm").Replace(' ', 'T');
}

<h2>Заявка #@Model.RequestId</h2>
<div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="ClientName"></label>
    <div class="col-sm-10">
        <input readonly class="form-control" asp-for="ClientName" />
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="Phone"></label>
    <div class="col-sm-10">
        <input readonly class="form-control" asp-for="Phone" />
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="RequestTime"></label>
    <div class="col-sm-10">
        <input readonly class="form-control" type="datetime-local" value="@outputRequestTime" />
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label" asp-for="RequestStatus.Name"></label>
    <div class="col-sm-10">
        <input readonly class="form-control" asp-for="RequestStatus.Name" />
    </div>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Text"></label><br />
    <textarea readonly class="form-control" rows="5" asp-for="Text"></textarea>
</div>
<a href="~/Requests/View" class="btn btn-primary">Назад</a>
